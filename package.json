{
	"name": "openrct2-mocks",
	"author": "Basssiiie",
	"license": "MIT",
	"version": "0.1.0",
	"description": "Unit test mocks for OpenRCT2 plugins.",
	"main": "dist/index.min.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist/index*"
	],
	"scripts": {
		"start": "npm run watch",
		"watch": "nodemon --watch ./src --ext js,ts",
		"build": "npm run lint && rollup --config rollup.config.prod.js",
		"build:dev": "rollup --config rollup.config.dev.js",
		"lint": "eslint ./src --ext .js --ext .ts",
		"test": "nyc ava",
		"publish:local": "npm run build && cd dist && npm pack .. && npm install --global openrct2-mocks-0.1.0.tgz"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Basssiiie/OpenRCT2-Mocks.git"
	},
	"homepage": "https://github.com/Basssiiie/OpenRCT2-Mocks#readme",
	"bugs": {
		"url": "https://github.com/Basssiiie/OpenRCT2-Mocks/issues"
	},
	"dependencies": {},
	"devDependencies": {
		"@ava/typescript": "^1.1.1",
		"@rollup/plugin-replace": "^3.0.0",
		"@rollup/plugin-typescript": "^8.2.3",
		"@typescript-eslint/eslint-plugin": "^4.28.4",
		"@typescript-eslint/parser": "^4.28.4",
		"ava": "^3.15.0",
		"eslint": "^7.31.0",
		"eslint-plugin-import": "^2.23.4",
		"nodemon": "^2.0.12",
		"nyc": "^15.1.0",
		"rollup": "^2.54.0",
		"rollup-plugin-dts": "^3.0.2",
		"rollup-plugin-terser": "^7.0.2",
		"ts-node": "^10.1.0",
		"tslib": "^2.3.0",
		"typescript": "^4.3.5"
	},
	"ava": {
		"extensions": [
			"ts"
		],
		"files": [
			"tests/**/*.tests.ts"
		],
		"require": [
			"./tests/_setup.js",
			"ts-node/register"
		],
		"verbose": true
	}
}
